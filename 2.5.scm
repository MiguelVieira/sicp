(define (install-rational-package)
  (define (numer x) (car x))
  (define (denom x) (cdr x))
  (define (make-rat n d)
    (let ((g (gcd n d)))
      (cons (/ n g) (/ d g))))
  (define (equ? r1 r2)
    (and (= (numer r1) (numer r2))
	 (= (denom r1) (denom r2))))
  (define (=zero? r)
    (= 0 (numer r)))
  (define (raise r)
    (/ (numer r) (denom r)))
  (put 'raise '(rational)
       (lambda (r) (raise r)))
